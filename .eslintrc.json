{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": 160
    },
    "overrides": [
        {
            "files": ["**/*.spec.js"],
            "env": {
                "jest": true
            }
        }
    ]
}
